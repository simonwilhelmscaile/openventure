{
  "name": "TrueStack",
  "idea": "TrueStack is a agency platform designed for growing businesses. We solve the problem of poor communication by providing transparent pricing with no hidden fees. Our solution combines cutting-edge technology with intuitive design to deliver exceptional results for our customers.",
  "tagline": "Streamline. in half the time. Work smarter.",
  "domain": "truestack.com",
  "business": {
    "industry": "professional services",
    "category": "consulting Platform",
    "target_audience": "marketing directors",
    "pain_points": [
      "Budget constraints",
      "Difficulty finding reliable partners",
      "Inconsistent results from freelancers"
    ],
    "value_proposition": "Dedicated account manager for every client",
    "unique_selling_points": [
      "Expert team with proven track record",
      "Results-driven approach with measurable KPIs",
      "Fast turnaround without sacrificing quality"
    ]
  },
  "brand": {
    "tone": "professional",
    "personality": [
      "innovative",
      "efficient",
      "trustworthy"
    ],
    "colors": {
      "primary": "#1e3a5f",
      "secondary": "#1B1B1B",
      "accent": "#3498db",
      "background": "#FFFFFF",
      "text": "#000000"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },
  "landing_page": {
    "enabled": true,
    "sections": {
      "hero": {
        "enabled": true,
        "style": "centered",
        "include_video": false
      },
      "social_proof": {
        "enabled": true,
        "logo_count": 6
      },
      "features": {
        "enabled": true,
        "count": 6,
        "layout": "grid"
      },
      "feature_showcase": {
        "enabled": true,
        "count": 3,
        "layout": "alternating"
      },
      "pricing": {
        "enabled": true,
        "tiers": 3,
        "currency": "USD",
        "billing_period": "monthly"
      },
      "testimonials": {
        "enabled": true,
        "count": 3
      },
      "faq": {
        "enabled": true,
        "count": 8
      },
      "cta": {
        "enabled": true,
        "style": "gradient"
      },
      "footer": {
        "enabled": true,
        "columns": 4
      }
    }
  },
  "blog": {
    "enabled": true,
    "article_count": 1,
    "locale": "en-US",
    "seo": {
      "primary_keyword": "consulting solutions",
      "secondary_keywords": [
        "service software",
        "best service tools",
        "marketing directors solutions"
      ],
      "keyword_density": 1.5
    },
    "content": {
      "min_word_count": 2000,
      "max_word_count": 4000,
      "sections_per_article": 8,
      "include_tldr": true,
      "include_key_takeaways": true,
      "include_tables": true,
      "include_faqs": true,
      "include_sources": true,
      "internal_linking": true
    },
    "author": {
      "name": "Editorial Team",
      "role": "Content Team",
      "company": "TrueStack",
      "image_url": ""
    }
  },
  "images": {
    "generate_hero": true,
    "generate_feature_icons": true,
    "generate_blog_headers": true,
    "style": "minimal",
    "format": "webp",
    "quality": 85
  },
  "output": {
    "directory": "./content",
    "formats": {
      "landing_page": "tsx",
      "blog_articles": "json",
      "images": "webp"
    }
  },
  "advanced": {
    "gemini_model": "gemini-2.0-flash-exp",
    "temperature": 0.7,
    "max_retries": 3,
    "rate_limit_delay_ms": 1000,
    "enable_competitor_analysis": false,
    "enable_seo_optimization": true
  }
}