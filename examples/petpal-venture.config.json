{
  "$schema": "../venture.schema.json",

  "idea": "AI-powered pet care platform that helps pet owners manage their pet's health, nutrition, and activities",
  "name": "PetPal AI",
  "tagline": "Your Pet's Best Digital Friend",
  "domain": "petpal-ai.vercel.app",

  "business": {
    "industry": "pet-tech",
    "category": "Pet Care Platform",
    "target_audience": "Pet owners who want to provide the best care for their furry friends using technology",
    "pain_points": [
      "Tracking pet health records is disorganized",
      "Finding the right nutrition plan is confusing",
      "Scheduling vet appointments is time-consuming"
    ],
    "value_proposition": "AI-powered companion that helps you understand and care for your pet better",
    "unique_selling_points": [
      "AI health monitoring and alerts",
      "Personalized nutrition recommendations",
      "Vet appointment scheduling",
      "Activity tracking and insights"
    ]
  },

  "competitors": {
    "urls": [],
    "analyze_design": true,
    "analyze_copy": true,
    "analyze_pricing": true
  },

  "brand": {
    "tone": "friendly",
    "personality": ["caring", "trustworthy", "innovative"],
    "colors": {
      "primary": "#FF6B35",
      "secondary": "#2E4057",
      "accent": "#7CB518",
      "background": "#FFFFFF",
      "text": "#1A1A1A"
    },
    "fonts": {
      "heading": "Inter",
      "body": "Inter"
    }
  },

  "landing_page": {
    "enabled": true,
    "sections": {
      "hero": { "enabled": true, "style": "centered", "include_video": false },
      "social_proof": { "enabled": true, "logo_count": 6 },
      "features": { "enabled": true, "count": 6, "layout": "grid" },
      "feature_showcase": { "enabled": true, "count": 3, "layout": "alternating" },
      "pricing": { "enabled": true, "tiers": 3, "currency": "USD", "billing_period": "monthly" },
      "testimonials": { "enabled": true, "count": 3 },
      "faq": { "enabled": true, "count": 6 },
      "cta": { "enabled": true, "style": "gradient" },
      "footer": { "enabled": true, "columns": 4 }
    }
  },

  "blog": {
    "enabled": true,
    "article_count": 5,
    "locale": "en-US",
    "author": {
      "name": "Dr. Sarah Chen",
      "role": "Veterinary Advisor",
      "company": "PetPal AI",
      "image_url": ""
    },
    "seo": {
      "primary_keyword": "pet care AI",
      "secondary_keywords": ["pet health tracking", "dog nutrition", "cat care tips", "pet wellness"],
      "keyword_density": 1.5
    },
    "content": {
      "min_word_count": 2000,
      "max_word_count": 3500,
      "sections_per_article": 7,
      "include_tldr": true,
      "include_key_takeaways": true,
      "include_tables": true,
      "include_faqs": true,
      "include_sources": true,
      "internal_linking": true
    }
  },

  "images": {
    "generate_hero": true,
    "generate_feature_icons": true,
    "generate_blog_headers": true,
    "style": "minimal",
    "format": "webp",
    "quality": 85
  },

  "deployment": {
    "platform": "vercel",
    "auto_deploy": true,
    "preview_deployments": true,
    "custom_domain": ""
  },

  "output": {
    "directory": "./content",
    "formats": {
      "landing_page": "tsx",
      "blog_articles": "json",
      "images": "webp"
    }
  },

  "advanced": {
    "gemini_model": "gemini-2.0-flash-exp",
    "temperature": 0.7,
    "max_retries": 3,
    "rate_limit_delay_ms": 1000,
    "enable_competitor_analysis": false,
    "enable_seo_optimization": true
  }
}
